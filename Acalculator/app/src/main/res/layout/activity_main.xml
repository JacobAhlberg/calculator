<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacob.acalculator.MainActivity">

    <ImageView
        app:srcCompat="@color/customColor"
        android:id="@+id/backgroundColor"
        android:layout_height="153dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="90dp"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_height="0dp" />

    <TextView
        android:text="0"
        android:layout_height="52dp"
        android:id="@+id/resultView"
        android:textSize="45dp"
        android:textColor="@color/colorPrimary"
        android:gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundColor"
        app:layout_constraintRight_toRightOf="@+id/backgroundColor"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundColor"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_width="0dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn5"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/btn6"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn6" />

    <Button
        android:text="7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn7"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/btn8"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/btn4" />

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn3"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/commaBtn"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text=","
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/commaBtn"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:text="AC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/clearBtn"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        app:layout_constraintRight_toLeftOf="@+id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn0"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/commaBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn3"
        app:layout_constraintRight_toLeftOf="@+id/btn3" />

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn1"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/btn2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn2" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn4"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/btn5"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn5"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:text="8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn8"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintRight_toLeftOf="@+id/btn9"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/btn5" />

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn9"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintRight_toRightOf="@+id/btn6"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/backgroundColor"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn6"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/transparent"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintRight_toRightOf="@+id/btn3" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/add"
        android:id="@+id/addBtn"
        android:background="@android:color/transparent"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/imageView" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/divide"
        android:id="@+id/divideBtn"
        android:background="@android:color/transparent"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp"
        app:layout_constraintRight_toRightOf="@+id/timesBtn"
        app:layout_constraintTop_toBottomOf="@+id/equalBtn"
        app:layout_constraintBottom_toTopOf="@+id/timesBtn"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/subtract"
        android:id="@+id/subtractBtn"
        android:background="@android:color/transparent"
        android:paddingTop="38dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/addBtn"
        app:layout_constraintRight_toRightOf="@+id/imageView" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/multiply"
        android:id="@+id/timesBtn"
        android:background="@android:color/transparent"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp"
        app:layout_constraintBottom_toTopOf="@+id/subtractBtn"
        app:layout_constraintRight_toRightOf="@+id/imageView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equal"
        android:id="@+id/equalBtn"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundColor"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="0"
        android:layout_height="42dp"
        android:id="@+id/calculationsView"
        app:layout_constraintRight_toRightOf="@+id/backgroundColor"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundColor"
        android:layout_width="384dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:textColor="@color/colorAccent"
        android:gravity="right|center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/resultView"
        app:layout_constraintTop_toTopOf="@+id/backgroundColor"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
